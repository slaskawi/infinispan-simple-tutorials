<?xml version="1.0" encoding="UTF-8"?>

<infinispan
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:infinispan:config:8.2 http://www.infinispan.org/schemas/infinispan-config-8.2.xsd"
        xmlns="urn:infinispan:config:8.2">
    <jgroups>
        <stack-file name="udp" path="default-configs/default-jgroups-udp.xml"/>
        <stack-file name="custom" path="jgroups.xml"/>
    </jgroups>

    <cache-container default-cache="repl">
        <!-- I used our provided file instead -->
        <transport cluster="myCluster" stack="udp" />
        <replicated-cache name="repl" mode="ASYNC" start="EAGER" statistics="true">
            <locking acquire-timeout="31000" concurrency-level="3000" isolation="SERIALIZABLE" striping="true"/>
            <transaction mode="BATCH" stop-timeout="61000" locking="PESSIMISTIC"/>
            <eviction max-entries="3200000" strategy="LIRS"/>
            <expiration interval="11000" lifespan="12" max-idle="12"/>
            <persistence>
                <file-store shared="false" preload="false" path="./data.dat"/>
            </persistence>
        </replicated-cache>
    </cache-container>
</infinispan>
